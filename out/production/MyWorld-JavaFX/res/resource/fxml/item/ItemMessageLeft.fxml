<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Circle fx:id="img_avatar" fill="#1f93ff" layoutX="45.0" layoutY="45.0" radius="20.0" stroke="WHITE" strokeType="INSIDE" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
      <VBox fx:id="box" layoutX="55.0" layoutY="9.0" spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <Label fx:id="lbfullname" text="Donly Conan" textFill="#656464">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label fx:id="lbmessage" style="-fx-background-color: #ccc; -fx-background-radius: 20px;" text="This content message." wrapText="true">
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding></Label>
            <ImageView fx:id="img_image" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnfile" mnemonicParsing="false" style="-fx-background-radius: 10px;" text="http://image.com">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
               </padding>
               <graphic>
                  <ImageView fx:id="imgdownload" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../con/download.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label fx:id="txtTime" contentDisplay="CENTER" prefHeight="0.0" prefWidth="150.0" style="-fx-alignment: center;" text="00:00:15">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <font>
                  <Font size="11.0" />
               </font></Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" top="5.0" />
   </padding>
</AnchorPane>
